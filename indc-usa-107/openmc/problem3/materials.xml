  <!-- Fuel composed of 30 a/o U-238 and 70 a/o U-235 -->
  <material id="1">
    <density value="18.8" units="g/cc" />
    <nuclide name="U238" ao="30.0" />
    <nuclide name="U235" ao="70.0" />
  </material>

  <!-- Water at 1 g/cc -->
  <material id="2">
    <density value="1.0" units="g/cc" />
    <nuclide name="H1"  ao="2.0" />
    <nuclide name="O16" ao="1.0" />
    <sab name="c_H_in_H2O" />
  </material>

</materials>
