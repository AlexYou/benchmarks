<?xml version="1.0"?>
<settings>
  <energy_mode>multi-group</energy_mode>

  <!--
    Define how many particles to run and for how many batches
    in an eigenvalue calculation mode
  -->
  <eigenvalue>
    <batches>20000</batches>
    <inactive>500</inactive>
    <particles>10000</particles>
  </eigenvalue>


  <!--
    Use the uniform fission site method to reduce uncertainties in low
    flux areas
  -->
  <uniform_fs>
    <lower_left> 0.0 21.42 0.0 </lower_left>
    <upper_right> 42.84 64.26 42.84 </upper_right>
    <dimension> 34 34 54 </dimension>
  </uniform_fs>

  <!--
    Start with uniformally distributed neutron source
    with the default energy spectrum of a Maxwellian in energy
    and isotropic in angle distribution.
  -->
  <source>
    <space type="box">
      <parameters>
         0.0  21.42 0.0
        42.84 64.26 42.84
      </parameters>
    </space>
  </source>

  <!-- Establish statepoints -->
  <state_point>
    <interval>5000</interval>
  </state_point>

  <output>
    <cross_sections>true</cross_sections>
    <summary>true</summary>
    <tallies>true</tallies>
  </output>

  <cross_sections>../data.xml</cross_sections>

</settings>
